
@{
    ViewBag.Title = "Sign Up";
}

<h4>Apply for the School Lunch Program</h4>

<form data-ng-controller="applicationController as app">
    <div class="row">
        <div class="col-md-3">
            <label for="firstName">First Name</label>
        </div>
        <div class="col-md-1">
            <label for="MI">MI</label>
        </div>
        <div class="col-md-3">
            <label for="lastName">Last Name</label>
        </div>
        <div class="col-md-1 text-center">
            <label for="MI">Student?</label>
        </div>
        <div class="col-md-1 text-center">
            <label for="MI">Foster Child?</label>
        </div>
        <div class="col-md-2 text-center">
            <label for="MI">Homeless, migrant, or runaway?</label>
        </div>
    </div>

    <div data-ng-repeat="child in app.childInfo" class="form-group row">
        <div class="col-md-3">
            <input type="text" class="form-control" />
        </div>
        <div class="col-md-1">
            <input type="text" class="form-control" />
        </div>
        <div class="col-md-3">
            <input type="text" class="form-control" />
        </div>
        <div class="col-md-1 text-center">
            <input type="checkbox" class="" />
        </div>
        <div class="col-md-1 text-center">
            <input type="checkbox" class="" />
        </div>
        <div class="col-md-2 text-center">
            <input type="checkbox" class="" />
        </div>
    </div>

    <div class="form-group">
        <a href="" data-ng-click="app.addChild()"><i class="fa fa-plus"></i> Add child</a>
    </div>

    <div>
        <label>Do any Household Members (including you) currently participate in one or more of the following assistance programs: SNAP, TANF, or FDPIR?</label>

    </div>
    <div class="form-group">
        <label class="radio-inline">
            <input type="radio" data-ng-model="app.formData.currentlyParticipating" value="1"> Yes
        </label>
        <label class="radio-inline">
            <input type="radio" data-ng-model="app.formData.currentlyParticipating" value="0"> No
        </label>
    </div>

    <div class="form-inline" data-ng-if="app.formData.currentlyParticipating == 1">
        <label class="control-label">Case Number</label>
        <input type="text" class="form-control m-l-10" style="width:200px" />
    </div>

    <div class="form-group form-inline" data-ng-if="app.formData.currentlyParticipating != 7">
        <label class="control-label">Income</label>
        <input type="number" min="0" class="form-control m-l-10" style="width:200px" />
        <label class="control-label m-l-30">How often?</label>
        <select class="m-l-10 form-control">
            <option>Weekly</option>
            <option>Bi-weekly</option>
            <option>Twice a month</option>
            <option>Monthly</option>
        </select>
    </div>



    <div class="row">
        <div class="col-md-3 form-headers">
            <label for="firstName">Name of Adult Household Member</label>
        </div>
        <div class="col-md-2 form-headers">
            <label for="MI">Earnings from work</label>
        </div>
        <div class="col-md-1 form-headers">
            <label for="lastName">How often?</label>
        </div>
        <div class="col-md-2 form-headers">
            <label for="MI">Public Assistance/Child Support/Alimony</label>
        </div>
        <div class="col-md-1 form-headers">
            <label for="MI">How often?</label>
        </div>
        <div class="col-md-2 form-headers">
            <label for="MI">Pensions/Retirement/Name of Adult Household Members (First and Last) All Other Income</label>
        </div>
        <div class="col-md-1 form-headers">
            <label for="MI">How often?</label>
        </div>
    </div>

    <div data-ng-repeat="adult in app.adultInfo" class="form-group row">
        <div class="col-md-3">
            <input type="text" class="form-control" />
        </div>
        <div class="col-md-2">
            <input type="number"  class="form-control"/>
        </div>
        <div class="col-md-1">
            <select class="form-control">
                <option>Weekly</option>
                <option>Bi-weekly</option>
                <option>Twice a month</option>
                <option>Monthly</option>
            </select>
        </div>
        <div class="col-md-2 text-center">
            <input type="number" class="form-control" />
        </div>
        <div class="col-md-1 text-center">
            <select class="form-control">
                <option>Weekly</option>
                <option>Bi-weekly</option>
                <option>Twice a month</option>
                <option>Monthly</option>
            </select>
        </div>
        <div class="col-md-2 text-center">
            <input type="number" class="form-control" />
        </div>
        <div class="col-md-1 text-center">
            <select class="form-control">
                <option>Weekly</option>
                <option>Bi-weekly</option>
                <option>Twice a month</option>
                <option>Monthly</option>
            </select>
        </div>
    </div>

    <div class="form-group">
        <a href="" data-ng-click="app.addAdult()"><i class="fa fa-plus"></i> Add adult</a>
    </div>

    <div class="form-inline form-group">
        <label>Total household members (children and adults)</label>
        <input class="m-l-20 form-control" type="number" style="width:100px"  />
    </div>

    <div class="form-inline form-group">
        <label>Last four digits of Social Security</label>
        <input class="m-l-20 form-control" type="number" style="width:100px" />
        <label class="m-l-40">Check if no SSN</label>
        <input class="m-l-20" type="checkbox" />
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-md-4">
                <label>Street Address (if available)</label>
                <input type="text" class="form-control" />
            </div>

            <div class="col-md-3">
                <label>City</label>
                <input type="text" class="form-control" />
            </div>

            <div class="col-md-1">
                <label>State</label>
                <input type="text" class="form-control" />
            </div>

            <div class="col-md-2">
                <label>Zip</label>
                <input type="text" class="form-control" />
            </div>

            <div class="col-md-2">
                <label>Daytime Phone</label>
                <input type="text" class="form-control" />
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-md-4">
                <label>Email Address</label>
                <input type="text" class="form-control" />
            </div>

            <div class="col-md-4">
                <label>Name of adult completing form</label>
                <input type="text" class="form-control" />
            </div>

            <div class="col-md-4">
                <label>Today's date</label>
                <input type="text" class="form-control" />
            </div>
        </div>
    </div>



</form>



@section scripts {

    <script type="text/javascript">
        angular
            .module('lunchApp', []);

        angular
            .module('lunchApp')
            .controller('applicationController', applicationController);

        function applicationController() {

            var vm = this;

            vm.childInfo = [{ firstName: null, lastName: null }];
            vm.addChild = addChild;
            vm.adultInfo = [{ firstName: null, lastName: null }];
            vm.addAdult = addAdult;

            function addChild() {
                vm.childInfo.push({ firstName: null, lastName: null });
            }

            function addAdult() {
                vm.adultInfo.push({ firstName: null, lastName: null });
            }


        }
    </script>
}